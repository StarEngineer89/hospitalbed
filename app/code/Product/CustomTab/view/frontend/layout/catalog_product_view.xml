<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
			<block class="Magento\Catalog\Block\Product\View" name="mattress.tab" template="Product_CustomTab::mattress.phtml" group="detailed_info" >
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Mattress Options</argument>
                    <argument name="sort_order" xsi:type="string">40</argument>
                </arguments>
            </block>
			<block class="Magento\Catalog\Block\Product\View" name="bed_rail.tab" template="Product_CustomTab::bed_rail.phtml" group="detailed_info" >
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Bed Rail Options</argument>
                    <argument name="sort_order" xsi:type="string">50</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>